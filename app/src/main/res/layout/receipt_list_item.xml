<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="2dp"


        app:cardCornerRadius="4dp"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/odijo_photo"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_centerVertical="true"

                android:fitsSystemWindows="true"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_black_24dp"
                app:civ_border_color="@color/colorAccentP"
                app:civ_border_width="0dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/odijo_photo"
                android:background="@color/line" />


            <LinearLayout
                android:id="@+id/odj"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/odijo_photo"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/l1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <LinearLayout
                        android:id="@+id/layout_details"


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_odijo_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_bold"
                            android:padding="2dp"
                            android:text="Full Odijo Name"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="sans" />


                        <TextView
                            android:id="@+id/txt_course"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_bold"
                            android:padding="2dp"
                            android:text="Course Name"
                            android:textColor="@android:color/black"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/txt_dateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_bold"
                            android:padding="2dp"
                            android:text="12/SEP/2017 11:21 PM"
                            android:textColor="@android:color/black"
                            android:typeface="sans"

                            />

                    </LinearLayout>

                </RelativeLayout>

                <View

                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/line" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/l1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"

                        android:orientation="horizontal"
                        android:padding="2dp">

                        <!--<ImageView-->

                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--app:srcCompat="@drawable/ic_attach_money_black_24dp" />-->

                        <TextView
                            android:id="@+id/txt_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/ubuntu_bold"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text=""

                            android:textColor="@android:color/black"
                            android:typeface="sans"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <!--<ImageView-->

                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--app:srcCompat="@drawable/ic_timer_black_24dp" />-->


                        <TextView
                            android:id="@+id/txt_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_bold"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:typeface="sans"

                            />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/odj"
                android:layout_marginTop="8dp"
                android:background="@color/line" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>