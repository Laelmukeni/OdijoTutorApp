<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:padding="4dp"
                android:layout_toStartOf="@+id/icon_more"

                android:id="@+id/layout_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_logo"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_client_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Eric Kogi Kimani"
                        android:textColor="@color/colorPrimaryP"
                        android:textSize="18sp"
                        android:textStyle="bold"
                         />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"



                    android:orientation="horizontal"
                    android:padding="4dp">


                        <TextView

                            android:id="@+id/txt_odijo_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location : "
                            android:textColor="@android:color/black"

                             />
                        <TextView
                            android:id="@+id/txt_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="Buru Buru Estate"
                            android:textColor="@android:color/black" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="horizontal"
                    android:padding="4dp">

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12/11/2017"
                            android:textColor="@android:color/black"
 />


                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14:30 - 16:00 "
                            android:textColor="@android:color/black"

                            />


                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:gravity="end"
                android:layout_gravity="top|end"
                android:id="@+id/icon_more"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:padding="4dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout

                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"


                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_clent_image"
                    android:layout_width="60dp"
                    android:padding="4dp"


                    android:layout_height="60dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p"
                    app:civ_border_color="@color/colorAccentP"
                    app:civ_border_width="0dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/layout_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_accept"
                    android:layout_weight="1"
                    android:text="Accept"
                    android:textColor="@android:color/black"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_border_transaparent"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />
                <Button
                    android:id="@+id/btn_decline"
                    android:layout_weight="1"
                    android:text="DECLINE"
                    android:textColor="@android:color/black"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_border_transaparent"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>